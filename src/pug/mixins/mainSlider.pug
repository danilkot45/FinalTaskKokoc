include ../mixins/gallaryBlock
include ../mixins/testimonialsBlock
include ../mixins/featureBlock

mixin slider(...photo)
  .slider
    for i in photo
      .slider__item
        img.slider__img(src=i alt="photo")

mixin sliderGallary(...options)
  .slider-gallary
    for i in options
      .slider-gallary__item.slider-gallary-item
        +gallary(i[0],i[1],i[2],i[3])

mixin sliderTestimonials(...options)
  .slider-testimonials
    for i in options
      .slider-testimonials__item.item
        +testimonials(i[0],i[1],i[2],i[3],i[4])
